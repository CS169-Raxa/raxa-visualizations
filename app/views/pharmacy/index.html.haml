= content_for :head do
  = stylesheet_link_tag :pharmacy
  = javascript_include_tag :raxa
  = javascript_include_tag :pharmacy

= content_for :title do
  Pharmacy stock

= content_for :subtitle do
  Click a row to show additional details and options.

= content_for :content do
  %table#drugs
    %thead
      %tr
        %th Name
        %th Time left
        %th History
    - @drugs.each do |drug|
      = render :partial => 'pharmacy/drug_edit', :locals => {:drug => drug}
