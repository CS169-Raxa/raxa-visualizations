= content_for :head do
  = stylesheet_link_tag :screener
  = javascript_include_tag :raxa
  = javascript_include_tag :screener

= content_for :title do
  Screening Dashboard

= content_for :content do
  %div.left
    %table#doctors
      %thead
        %tr
          %th Doctor
          %th Specialties
          %th Workload
      %tbody
        - @sorted_doctors.each do |doctor|
          - percent = (100 * doctor.num_patients.to_f / @max_patients).to_i
          %tr
            %td<
              = doctor.name
            %td<
              = doctor.specialty_names.join(', ')
            %td
              %span.bar-container
                %span.bar{:style => "width: #{percent}%", :data => {:percent => percent},}<
                  %span.bar_text<
                    = doctor.num_patients
  %div.right
    %div#rightbar
      %div.stat
        %div.bignum#patients_left<
          = @patients_left
        = "#{'patient'.pluralize(@patients_left)} to assign"
      %div#department_chooser
        Filter by department:
        %br
        %select#department_select
          - @specialties.each do |specialty|
            %option<
              = specialty.name
